#
# Build the docker image with `npx nx docker-build hr-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t hr-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system hr-api && \
          adduser --system -G hr-api hr-api

COPY dist/apps/hr-api hr-api/
RUN chown -R hr-api:hr-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix hr-api --omit=dev -f install

CMD [ "node", "hr-api" ]
