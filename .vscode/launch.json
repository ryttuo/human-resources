{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "⚙️ (hr-api)",
        "runtimeExecutable": "node",
        "runtimeArgs": ["--inspect-brk", "${workspaceFolder}/node_modules/.bin/nx", "serve", "hr-api"],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ]
      }
    ]
  }
  